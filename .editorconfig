# EditorConfig 配置文件
# https://editorconfig.org

# 顶级配置文件
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
indent_size = 4

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# JSON 文件
[*.json]
indent_size = 2

# Package.json
[package.json]
indent_size = 2

# JavaScript/TypeScript 文件
[*.{js,jsx,ts,tsx}]
indent_size = 4
quote_type = single

# CSS/SCSS 文件
[*.{css,scss,less}]
indent_size = 4

# HTML 文件
[*.html]
indent_size = 4

# Shell 脚本
[*.sh]
end_of_line = lf
indent_size = 4

# Batch 脚本
[*.bat]
end_of_line = crlf
indent_size = 4
